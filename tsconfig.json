{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "strict": false,
      "allowJs": true,
      "alwaysStrict":false,
      "esModuleInterop": true
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules",
    "src/_**/*"
  ]
}
